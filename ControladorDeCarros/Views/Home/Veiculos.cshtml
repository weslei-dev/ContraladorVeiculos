@model List<WebMvcRazorCshap.Models.Veiculo>

<div class="text-center">
    <tr>
        <h1>@ViewBag.Title.</h1>
        <h1>@ViewBag.Mensagem</h1>
    </tr>
</div>
<p class="text-right"><a class="btn btn-default btn btn-primary" href="/Veiculos/Adicionar">Inserir veiculo &raquo;</a></p>


<table class="table table-striped">

    <tr>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Fabricacao</th>
        <th>Cor</th>
        <th>Combustivel</th>
        <th>Automatico</th>
        <th>Valor</th>
        <th>Ação</th>
        <th>Ação</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-left">@item.Nome </td>
            <td class="text-left">@item.Modelo </td>
            <td>@item.Fabricacao </td>
            <td>@item.Cor </td>
            <td>@item.Combustivel </td>
            <td>@item.Automatico </td>
            <td>@item.Valor </td>
            @*<td>@item.Ativo </td>*@
            <td><a href="/Veiculos/Alterar/@item.Id">Alterar</a></td>
            <td>
                <a href="/Veiculos/Excluir/@item.Id">Excluir</a>
            </td>
        </tr>
    }

</table>




<p>Use this area to provide additional information.</p>
